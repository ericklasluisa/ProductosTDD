@model List<ProductosTDD.Data.Cliente>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<table class="table">
    <thead>
        <tr>
            <th>Código</th>
            <th>Cédula</th>
            <th>Nombres</th>
            <th>Apellidos</th>
            <th>Fecha de Nacimiento</th>
            <th>Mail</th>
            <th>Teléfono</th>
            <th>Dirección</th>
            <th>Estado</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var cliente in Model)
        {
            <tr>
                <td>@cliente.Codigo</td>
                <td>@cliente.Cedula</td>
                <td>@cliente.Nombres</td>
                <td>@cliente.Apellidos</td>
                <td>@cliente.FechaNacimiento.ToString("dd/MM/yyyy")</td>
                <td>@cliente.Mail</td>
                <td>@cliente.Telefono</td>
                <td>@cliente.Direccion</td>
                <td>@cliente.Estado</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@cliente.Codigo" class="btn btn-warning btn-sm"><i class="bi bi-pencil-square"></i></a>
                    <a asp-action="Delete" asp-route-id="@cliente.Codigo" class="btn btn-danger btn-sm"><i class="bi bi-trash"></i></a>
                </td>

            </tr>
        }
    </tbody>
</table>

<!-- Botón de agregar cliente -->
<a href="/Cliente/Create" class="btn btn-primary mb-3">
    <i class="bi bi-person-add"></i> Agregar Cliente
</a>