@model ProductosTDD.Data.Pedido

@{
    ViewData["Title"] = "Editar Pedido";
}

<div class="card">
    <div class="card-header">
        Editar Pedido
    </div>
    <div class="card-body">
        <form asp-action="Edit" method="post" class="needs-validation" novalidate>
            <input type="hidden" asp-for="PedidoID" />

            <div class="row">
                <div class="form-group col-md-4">
                    <label for="ClienteID">ID Cliente</label>
                    <input type="number" class="form-control" asp-for="ClienteID" required>
                    <div class="invalid-feedback">Por favor, ingrese un ID de cliente válido.</div>
                </div>
                <div class="form-group col-md-4">
                    <label for="FechaPedido">Fecha del Pedido</label>
                    <input type="date" class="form-control" asp-for="FechaPedido" required>
                    <div class="invalid-feedback">Por favor, ingrese la fecha del pedido.</div>
                </div>
                <div class="form-group col-md-4">
                    <label for="Monto">Monto</label>
                    <input type="number" step="0.01" class="form-control" asp-for="Monto" required>
                    <div class="invalid-feedback">Por favor, ingrese un monto válido.</div>
                </div>
            </div>

            <div class="row">
                <div class="form-group col-md-4">
                    <label for="Estado">Estado</label>
                    <select class="form-control" asp-for="Estado" required>
                        <option value="Pendiente">Pendiente</option>
                        <option value="Procesado">Procesado</option>
                        <option value="Enviado">Enviado</option>
                        <option value="Completado">Completado</option>
                        <option value="Cancelado">Cancelado</option>
                    </select>
                    <div class="invalid-feedback">Por favor, seleccione el estado del pedido.</div>
                </div>
            </div>

            <button type="submit" class="btn btn-primary mt-3">Guardar Cambios</button>
            <a asp-action="Index" class="btn btn-secondary mt-3">Cancelar</a>
        </form>
    </div>
</div>

<script>
    (function () {
        'use strict';
        window.addEventListener('load', function () {
            var forms = document.getElementsByClassName('needs-validation');
            Array.prototype.filter.call(forms, function (form) {
                form.addEventListener('submit', function (event) {
                    if (form.checkValidity() === false) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    form.classList.add('was-validated');
                }, false);
            });
        }, false);
    })();
</script>
